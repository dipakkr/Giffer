<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:id="@+id/img_gif"
        android:background="@drawable/nav_back4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_share_black_24dp"
        android:layout_marginEnd="26dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/img_gif"
        android:id="@+id/share_gif"
        android:layout_alignEnd="@+id/img_gif" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cloud_download_black_24dp"
        android:layout_below="@+id/img_gif"
        android:layout_margin="10dp"
        android:layout_alignStart="@+id/img_gif"
        android:layout_marginStart="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ic_favorite_border_black_24dp"
        android:layout_below="@+id/img_gif"
        android:layout_centerHorizontal="true" />

</RelativeLayout>